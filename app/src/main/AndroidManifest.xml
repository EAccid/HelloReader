<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eaccid.hocreader">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".injection.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <provider
            android:name=".presentation.activity.main.serchadapter.SearchSuggestionsProvider"
            android:authorities="com.eaccid.hocreader.presentation.activity.main.serchadapter.SearchSuggestionsProvider"
            android:exported="false" />

        <activity
            android:name=".presentation.activity.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".presentation.activity.pager.PagerActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.OPEN_DOCUMENT" />
            </intent-filter>
        </activity>

        <service
            android:name=".underdevelopment.services.LingualeoSyncService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".presentation.service.MemorizingService"
            android:enabled="true"
            android:exported="false" />

        <receiver
            android:name=".presentation.service.MemorizingAlarmReceiver"
            android:process=":remote" />
        <activity
            android:name=".presentation.activity.notcard.CardWordActivity"
            android:theme="@style/AppTheme.Dialog" />
        <activity
            android:name=".presentation.activity.settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".presentation.activity.main.MainActivity"
            android:theme="@style/AppTheme.Settings">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".presentation.activity.main.MainActivity" />
        </activity>
        <activity android:name=".presentation.activity.training.TrainingActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>