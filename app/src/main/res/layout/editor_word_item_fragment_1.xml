<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/card_vertical_margin"
    android:layout_marginStart="@dimen/card_vertical_margin"
    android:minHeight="@dimen/card_view_min_height"
    app:cardElevation="@dimen/item_card_view_elevation">

    <RelativeLayout
        android:id="@+id/translation_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/translation"
            android:text="@string/empty_translation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/card_frame_item_min_height"
        android:background="@drawable/bg_item_normal_state"
        android:clickable="true"
        android:elevation="@dimen/item_card_view_elevation"
        android:foreground="?attr/selectableItemBackground"
        android:stateListAnimator="@animator/raise">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/word_image_size"
            android:layout_height="@dimen/word_image_size"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/empty_circle_background"
            android:id="@+id/circleView"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="32dp"
            android:src="@drawable/ic_image_white_32px"
            android:id="@+id/empty_image"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/word"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/empty_word"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="@dimen/card_frame_item_min_height"
            style="@style/Base.TextAppearance.AppCompat.Headline" />

        <TextView
            android:id="@+id/word_context"
            android:layout_width="177dp"
            android:layout_height="match_parent"
            android:text="@string/empty_word"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="@dimen/card_frame_item_min_height"
            android:textSize="12sp"/>

    </FrameLayout>

</android.support.v7.widget.CardView>